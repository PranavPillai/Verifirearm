{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "assets/schema.json",
	"name": "Credential Issuer ",
	"title": "Credential Issuer ",
	"titlePlural": "Credentials Issuer ",
	"description": "Credentials Issuer",
	"type": "object",
	"database": {
		"name": "credential",
		"indexes": {
			"firstName": ["firstName"],
			"lstName": ["lastName"],
			"insertedAt": ["insertedAt"]
		}
	},
	"appearance": {
		"style": {
			"color": "#FF886E",
			"icon": "./credential_issuer.png"
		}
	},
	"layouts": {
		"create": [
			"firstName",
			"lastName",
			"licenseNumber",
			"testTimestamp",
			"regExpDate"
		],
		"view": [
			"firstName",
			"lastName",
			"licenseNumber",
			"testTimestamp",
			"regExpDate",
			"doctorName"
		]
	},
	"allOf": [
		{
			"$ref": "https://core.schemas.verida.io/base/v0.1.0/schema.json"
		},
		{
			"$ref": "https://common.schemas.verida.io/credential/base/v0.1.0/schema.json"
		},
		{
			"properties": {
				"firstName": {
					"title": "First Name",
					"type": "string"
				},
				"lastName": {
					"title": "Last Name",
					"type": "string"
				},
				"licenseNumber": {
					"title": "License Number",
					"type": "string"
				},
				"doctorName": {
					"title": "Issuing Doctor",
					"type": "string"
				},
				"testTimestamp": {
					"title": "Test timestamp",
					"type": "string",
					"format": "date-time"
				},
				"regExpDate": {
					"title": "Screening Expiration Date",
					"type": "string",
					"format": "date",
					"description": "YYYY-MM-DD"
				}
			},
			"required": [
				"firstName",
				"lastName",
				"licenseNumber",
				"regExpDate",
				"doctorName"
			]
		}
	]
}